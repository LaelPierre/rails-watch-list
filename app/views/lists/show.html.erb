<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
    <h1><%= @list.name %></h1>
  </div>
    <span class="movie-tag"><%= pluralize(@list.movies.size, 'movie') %></span>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-flat btn-primary"%>
      <%= link_to "delete this list", list_path(@list), method: :delete, class: "btn btn-cancel btn-primary", data: { confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>
</div>
